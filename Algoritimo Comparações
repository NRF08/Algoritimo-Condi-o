Nicolas Ramos de Freitas 1°B

Algoritimo Comparações
Declarações:
  numero1:inteiro;
  numero2:inteiro;
  numero3:inteiro;
  maior:inteiro;
  menor:inteiro;
  resposta:texto;
inicio
	escreva("digite dois valores à serem comparados");
		leia(numero1);
		leia(numero2);
	se(numero1 < numero2) entao;
		maior(numero2);
			menor(numero1);
	senao;
		maior(numero1);
			menor(numero2);
	escreva("digite outro valor à ser comparado");
		leia(numero3);
	se(numero3 > maior)entao;
		maior(numero3);

escreva (numero 3 "maior que" maior)
	senao
	se(numero3 < menor)entao
		menor(numero3);
	escreva (numero 3 "menor que" menor)

FIM-se
	FIM-se

	escreva("digite sair para finalizar o programa");
		leia(resposta);
	resposta<- fechar programa;
enquanto(resposta != "sair")entao
	escreva("digite sair para finalizar o programa");
			FIM-Enquanto

FIM.
